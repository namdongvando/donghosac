<div class="row   "  ng-controller="mpageController">    <section class="col-md-12" >        <div class="box box-solid ">            <div class="box-header ">                <h3 class="box-title">Quản Lý Bài Viết</h3>            </div><!-- /.box-header -->            <div class="box-body no-padding ">                <div class="table-responsive" >                    <a href="/mpage/addpage/" class="btn btn-success" style="margin: 10px" >Thêm Trang</a>                    <table class="table table-bordered" >                        <thead>                            <tr>                                <th>Action</th>                                <th>#</th>                                <th>Tên Trang</th>                                <th>Nhóm</th>                                <th>Hiển Thị</th>                                <th>Loại Trang</th>                            </tr>                        </thead>                        <tbody>                            <tr ng-repeat="itemPage in _Pages" >                                <td style="width: 150px;" >                                    <a class="btn btn-primary" href="/mpage/editpage/{{itemPage.idPa}}" >Sửa</a>                                    <span class="bakco-modaldelete" ng-init="modaldeleteInit('Xóa', 'Thông Báo', 'Bạn có muốn xóa trang này', '/mpage/deletepage/' + itemPage.idPa, itemPage.idPa)" ></span>                                </td>                                <td>{{itemPage.idPa}}</td>                                <td>                                    <a ng-show="itemPage.Type == 1" href="/mnews/newsbypages/{{itemPage.idPa}}" >{{itemPage.Name}}</a>                                    <a ng-show="itemPage.Type != 1" href="/mpage/editpage/{{itemPage.idPa}}" >{{itemPage.Name}}</a>                                </td>                                <td>{{itemPage.idGroup}}</td>                                <td>                                    {{itemPage.isShow==0?"Ẩn":"Hiện"}}                                </td>                                <td>{{itemPage.Type}}</td>                            </tr>                        </tbody>                    </table>                </div>            </div>        </div>    </section> </div>